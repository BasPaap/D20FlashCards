@inject CardsService  CardsService;

<i>@CardsService.Statuss/i>

@functions
{
    private string uriText;

    [Parameter] string UriText
    {
        get { return this.uriText; }
        set
        {
            this.uriText = value;
            GetCardsAsync();
        }
    }

    async void GetCardsAsync()
    {
        await CardsService.GetCardsAsync(UriText);
    }

}